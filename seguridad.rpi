#!/bin/bash

echo "-----------------------------------------------"
echo "Author: Jose Manuel Rodriguez Montes"
echo ""
echo "Options: --init --> for initialize the program"
echo "         --end  --> for close the program"
echo "-----------------------------------------------"

if [ $1 = "--init" ]
then
	sudo ./cam-seg.py &
	echo "Starting recording..."
fi
if [ $1 = "--end" ]
then
	sudo touch close
	sleep 1
	sudo rm -f close
	echo "Ending recording..."
fi

